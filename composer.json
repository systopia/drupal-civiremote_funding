{
    "name": "custom/civiremote_funding",
    "description": "Drupal frontend for funding applications of CiviCRM Funding Manager.",
    "type": "drupal-custom-module",
    "license": "GPL-3.0-only",
    "authors": [
        {
            "name": "SYSTOPIA",
            "email": "info@systopia.de"
        }
    ],
    "autoload": {
        "psr-4": {
            "Drupal\\civiremote_funding\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Drupal\\Tests\\civiremote_funding\\": "tests/src/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "php-http/discovery": true,
            "phpstan/extension-installer": true,
            "tbachert/spi": false
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "0.9.x-dev"
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/systopia/civiremote.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/systopia/drupal-json_forms.git"
        },
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "php": "^8.1",
        "beberlei/assert": "*",
        "custom/civiremote": "^1.1",
        "drupal/cmrf_core": "^2.1.2",
        "drupal/json_forms": "~0.7",
        "drupal/views_current_path": "^3.0",
        "drupal/views_data_export": "^1.4",
        "drupal/xls_serialization": "^1.3"
    },
    "require-dev": {
        "drupal/core": "^10.2 || ^11",
        "drupal/core-dev": "^10.2 || ^11"
    },
    "suggest": {
        "drupal/fontawesome": "To load Font Awesome icons. https://www.drupal.org/project/fontawesome"
    },
    "scripts": {
        "composer-phpstan": [
            "@composer --working-dir=tools/phpstan"
        ],
        "composer-tools": [
            "@composer-phpstan"
        ],
        "phpcs": [
            "@php vendor/bin/phpcs"
        ],
        "phpcbf": [
            "@php vendor/bin/phpcbf"
        ],
        "phpstan": [
            "@php tools/phpstan/vendor/bin/phpstan -v"
        ],
        "phpunit": [
            "@php vendor/bin/phpunit --coverage-text"
        ],
        "test": [
            "@phpcs",
            "@phpstan",
            "@phpunit"
        ]
    }
}
